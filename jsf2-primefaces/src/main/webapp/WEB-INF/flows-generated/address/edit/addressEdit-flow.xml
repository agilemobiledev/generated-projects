<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- address: the entity to edit. If null, then we create it here -->
	<input name="address" required="false" value="flowScope.address"/>	
	<on-start>
		<evaluate expression="addressController.newIfNull(address)" result="flowScope.address" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="addressSubEdit" else="addressEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="addressEdit">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,address.id,addressConverter.print(address))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="addressController.save(address)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="addressController.saveAndClose(address)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,address)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="addressController.delete(address)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="addressSubEdit" view="addressEdit.xhtml">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<end-state id="endEdit">
		<output name="address" value="address" />
	</end-state>
</flow>