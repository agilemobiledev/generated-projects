<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow  -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- legacy: the entity to edit. If null, then we create it here -->
	<input name="legacy" required="false" value="flowScope.legacy"/>	
	<on-start>
		<evaluate expression="legacy == null ? legacyRepository.newWithDefaults : legacy" result="flowScope.legacy" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="legacySubEdit" else="legacyEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="legacyEdit">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,legacy.id,legacyConverter.print(legacy))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="legacyRepository.save(legacy)" />
			<evaluate expression="messageUtil.info('status_saved_ok')" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="legacyRepository.save(legacy)" />
			<evaluate expression="primeFacesUtil.forceClose()"/>
            <set name="conversationScope.quitMessage" value="messageUtil.newInfo('status_saved_ok')" />            
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,legacy)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="legacyRepository.delete(legacy)" />
            <set name="conversationScope.quitMessage" value="messageUtil.newInfo('status_deleted_ok')" />            
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="legacySubEdit" view="legacyEdit.xhtml">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>


	<!-- END EDIT -->
	<end-state id="endEdit">
		<output name="legacy" value="legacy" />
	</end-state>
</flow>