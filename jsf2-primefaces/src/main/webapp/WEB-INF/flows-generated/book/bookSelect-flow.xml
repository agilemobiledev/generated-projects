<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract">
	<!-- note: this flow inherits from the 'abstract' flow -->

	<persistence-context />

	<var name="bookLazyDataModel" class="com.jaxio.web.domain.BookLazyDataModel" />

	<decision-state id="selectChoice">
		<if test="create" then="edit" />
		<if test="sub" then="bookSubSelect" else="bookSelect" />
	</decision-state>

	<view-state id="bookSelect">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,'select')" />
		</on-render>
        <transition on="select" to="checkIfAlreadyOpenFlow" validate="false"/>
        <transition on="delete" validate="false">
            <evaluate expression="bookRepository.delete(bookLazyDataModel.selectedRow)"  />
            <evaluate expression="messageUtil.info('status_deleted_ok')" />
        </transition>
		<transition on="sendNew" to="edit" validate="false" />
	</view-state>

	<view-state id="bookSubSelect" view="bookSelect.xhtml">
		<transition on="select" to="bookSelected" validate="false"/>
	</view-state>

	<decision-state id="checkIfAlreadyOpenFlow">
		<if test="flowsMenuHandler.isFlowAlreadyOpen(flowRequestContext,bookLazyDataModel.selectedRow)" 
			then="endSwitchToAlreadyOpenFlow"
			else="edit" />
	</decision-state>

	<subflow-state id="edit" subflow="book/edit">
		<input name="book" value="bookLazyDataModel.selectedRow" />
		<transition on="endEdit" to="quit" />
		<transition on="cancelEdit" to="quit" />
		<transition on="deleteAndClose" to="quit"/>
	</subflow-state>

	<end-state id="endSwitchToAlreadyOpenFlow"
		view="externalRedirect:contextRelative:#{flowsMenuHandler.endStateRedirectToAlreadyOpenFlow(flowRequestContext,bookLazyDataModel.selectedRow)}" />

	<end-state id="bookSelected">
		<output name="bookSelected" value="bookLazyDataModel.selectedRow" />
	</end-state>

	<global-transitions>
		<transition on="search">
			<evaluate expression="bookLazyDataModel.onSearch()" />
		</transition>
	</global-transitions>
</flow>